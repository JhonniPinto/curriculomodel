<% include ../partials/header %>
<div class="row">
    <div class="col-6 py-5">
        <div class="jumbotron jumbotron-fluid p-4 col-12">
            <div class="row align-items-center">
                <div class="col-4">
                    <img src="/images/FotoPerfil2.jpg" class="w-75" alt="foto de perfil do Jhonni Pinto">
                </div>
                <div class="container col-8">
                    <h1 class="display-4">Jhonni Pinto</h1>
                    <p class="lead">Gestão do perfil.</p>
                </div>
            </div>
        </div>
        <div class="col-12">
            <div class="row justify-content-center">
                <div class="col-10">
                    <h2 class="text-primary mb-4">Contatos feitos</h2>
                    <table>
                        <% allContatos.forEach(contato => { %>
                            <tr class="h5">
                                <th class="pt-2"><i class="fas fa-user text-success px-1"></i></th>
                                <th class="pt-2 px-2"><%- contato.nome %></th>
                                <th class="pt-2"><a href="/admin/contato/apagar/<%- contato.id %>" class="text-info">Apagar</a></th>
                            </tr>
                            <tr>
                                <td></td>
                                <td><%- contato.email %></td>
                            </tr>
                            <tr>
                                <td></td>
                                <td><p><%- contato.assunto %></p></td>
                            </tr>
                        <% }) %>
                        </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6">
        <div class="row justify-content-center">
            <div class="col-11 p-5">
                <h2 class="text-primary">Características</h2>
                <a href="/admin/campo/novo" class="text-info">Novo campo</a> |
                <a href="/admin/informacao/nova" class="text-info">Nova informação</a>
                <table>
                    <% camposEInfos.forEach(campo => { %>
                    <tr>
                        <th class="text-center pb-3 pt-5"><i class="mr-3 h1 text-success <%- campo.icone %>"></i></th>
                        <th class="pb-3 pt-5 px-2"><h4><%- campo.nome %> </h4></th>
                        <th class="pb-3 pt-5"><h5>
                            | <a href="/admin/campo/editar/<%- campo.id %>" class="text-info">editar</a> 
                            <a href="/admin/campo/excluir/<%- campo.id %>" class="text-info">excluir</a>
                        </h5></th>
                    </tr>
                    <% campo.infos.forEach(info => { %>
                    <tr>
                        <td></td>
                        <td><li><%- info.nome %></li></td>
                        <td>
                            | <a href="/admin/informacao/editar/<%- info.id %>" class="text-info">editar</a> 
                            <a href="/admin/informacao/excluir/<%- info.id %>" class="text-info">excluir</a>
                        </td>
                    </tr>
                    <% }) %>
                    <% }) %>
                </table>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>